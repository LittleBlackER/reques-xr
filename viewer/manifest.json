{
  "name": "4D Video Player",
  "short_name": "Super4D",
  "description": "Super4D is an advanced browser-based viewer for 4D Gaussian Splats.",
  "display": "fullscreen",
  "start_url": "./",
  "scope": "./",
  "background_color": "#000000",
  "icons": [
    {
      "src": "./super-4d.svg",
      "sizes": "192x192",
      "type": "image/svg+xml"
    },
    {
      "src": "./super-4d.svg",
      "sizes": "512x512",
      "type": "image/svg+xml"
    }
  ],
  "screenshots": [
    {
      "src": "./super-4d.svg",
      "type": "image/svg+xml",
      "sizes": "2160x3840",
      "form_factor": "narrow"
    },
    {
      "src": "./super-4d.svg",
      "type": "image/svg+xml",
      "sizes": "3840x2160",
      "form_factor": "wide"
    }
  ],
  "file_handlers": [
    {
      "action": "./",
      "accept": {
        "application/ply": [
          ".ply"
        ]
      }
    }
  ]
}
